= form_for @quote do |f|
  - if @quote.errors.any?
    #error_explanation
      %h2= "#{pluralize(@quote.errors.count, "error")} prohibited this quote from being saved:"
      %ul
        - @quote.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :source
    = f.text_field :source
  .field
    = f.label :author
    = f.collection_select(:author_id, Author.order(:name), :id, :name)
  .actions
    = f.submit 'Save'
